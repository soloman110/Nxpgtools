<tiles-definitions>
	<!-- jsp 父布局 -->
	<definition name="tiles/jspLayout" templateType="jsp" template="/WEB-INF/jsp/common/baseLayout.jsp">
		<put-attribute name="header" type="jsp" value="/WEB-INF/jsp/common/header.jsp" />
		<put-attribute name="footer" type="jsp" value="/WEB-INF/jsp/common/footer.jsp" />
		<put-attribute name="body" type="jsp" value="" />
	</definition>
	
	<definition name="tiles/jsp/*" extends="tiles/jspLayout" templateType="jsp">
		<put-attribute name="body" type="jsp" value="/WEB-INF/jsp/{1}.jsp" />
	</definition>

